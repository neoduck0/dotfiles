// -*- mode: jsonc -*-
{
    "layer": "bottom",
    "position": "top",

    "height": 34,
    "spacing": 20,

    "modules-left": ["hyprland/workspaces", "wlr/taskbar", "hyprland/submap"],
    "modules-center": ["clock"],
    "modules-right": ["tray", "hyprland/language", "privacy", "power-profiles-daemon", "idle_inhibitor", "memory", "cpu", "backlight", "battery", "pulseaudio", "bluetooth", "network"],

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },

        "all-outputs": true
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 12,

        "tooltip": false,

        "all-outputs": true
    },

    "hyprland/submap": {
        "format": "{}",

        "tooltip": false
    },

    "clock": {
        "format": "{:%a %d/%m %H:%M:%S}",

        "tooltip": false,

        "interval": 1
    },

    "tray": {
        "icon-size": 12,
        "spacing": 20
    },

    "hyprland/language": {
        "format": "{}",
        "format-en": "en",
        "format-ar": "ar"
    },

    "privacy": {
        "icon-size": 12,
        "icon-spacing": 20,

        "modules": [
            {
                "type": "screenshare",
                "tooltip": false
            },
            {
                "type": "audio-in",
                "tooltip": false
            }
        ] 
    },

    "power-profiles-daemon": {
        "format": "{icon}",
        "format-icons": {
            "performance": "",
            "balanced": "",
            "power-saver": ""
        },

        "tooltip": false
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },

        "tooltip": false
    },

    "memory": {
        "format": "{}% ",

        "tooltip": false,

        "interval": 5
    },

    "cpu": {
        "format": "{usage}% ",

        "tooltip": false,

        "interval": 5
    },

    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""],

        "tooltip": false
    },

    "battery": {
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-icons": ["", "", "", "", ""],

        "tooltip-format": "Health: {health}%",

        "states": {
            "warning": 30,
            "critical": 20
        },
        "interval": 1
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": ["", "", ""],

        "tooltip": false,
        "on-click": "pavucontrol"
    },

    "bluetooth": {
        "format": "",
        "format-connected": "{device_battery_percentage}% ",
        "format-disabled": "",
        "format-off": "",
        "format-no-controller": ""
    },

    "network": {
        "format": "",
        "format-ethernet": "",
        "format-wifi": "{signalStrength}% ",

        "tooltip-format": "{ifname}",
        "on-click": "nm-connection-editor",

        "interval": 10
    }
}
